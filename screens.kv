# this is the main window's code and functions
<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        # to make a label: first declare the label and add the text with a colon and quotations. you can modify the font, color, background color, font size and much more.
        Image:
            source: 'logo.png'
            size: self.texture_size
            keep_ratio: True
            allow_strech: True
            background_color: (255/255,255/255,255/255,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.width, self.height
                    pos: self.pos

        Label:
            text: "Events of  2023 - 2024"
            font_size: 50
            color: 0, 0, 0, 1
            background_color: (255/255,255/255,255/255,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        # to make a button: first declare what you want to make, then do the same with the label. Modify the text and other things.
        Button:
            text: "Proceed"
            font_size: 30
            background_color: (20/255,50/255,200/255,1)
            size_hint: 1, 0.7
            on_release:
                app.root.current = "eventWindow"
                root.manager.transition.direction = "left"
<EveWindow>:
    name: "eventWindow"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Select a Month"
            font_size: 25
